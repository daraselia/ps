{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext",
    "paths": {
      "components": ["components"],
      "features": ["features"],
      "content": ["content"],
      "pages": ["pages"],
      "constants": ["constants"],
      "layouts": ["layouts"]
    }
  },
  "include": ["./pages/**/*.ts*", "./src/**/*.ts*", "**/*.d.ts"],
  "exclude": ["node_modules", ".next", "next.config.js"]
}
